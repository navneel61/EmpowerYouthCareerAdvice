<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResumeTipsHireActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blog_title"
            android:text="4 Simple Things That You Can Do To Improve Your Leadership Today"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="24sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/blog_title_image"
            app:layout_constraintTop_toBottomOf="@id/blog_title"
            android:src="@drawable/first"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scroll"
            app:layout_constraintTop_toBottomOf="@id/blog_title_image"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blog_description"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/blog_title_image"
            app:layout_constraintStart_toStartOf="parent"
            android:text="HR has come a long way from being an administrative center to a strategic business partner since its inception. However, widespread doubts about HRâ€™s contribution to organizational performance has rendered it the reputation of being an overhead and compliance driving department only. According to Deloitte's 2017 Global Human Capital Trends report, HR practitioners graded themselves a C (2.0 on a five-point scale) in effectiveness while non-HR practitioners grading HR a C- (1.8 score). "/>
            </ScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/references"
            app:layout_constraintTop_toBottomOf="@id/scroll"
            android:text="References"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_reference"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/references"
            android:text="Deloitte's 2017 Global Human Capital Trends report"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second_reference"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/first_reference"
            android:text="KPMG CEO Outlook 2017 report"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comments"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/second_reference"
            android:text="Comments"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_comments"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/comments"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_comment"
            app:layout_constraintTop_toBottomOf="@id/editText_comments"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Comment"
            android:background="@color/colorSkyBlue"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView_comment"
            app:layout_constraintTop_toBottomOf="@id/button_comment"
            android:padding="20dp"
            android:visibility="gone"/>
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/cardview"
            app:layout_constraintTop_toBottomOf="@id/recyclerView_comment"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp"
            app:cardCornerRadius="30dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/usrimg"
                android:id="@+id/user_image"
                app:layout_constraintTop_toBottomOf="@id/button_comment"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_horizontal"/>
        </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                app:layout_constraintTop_toBottomOf="@+id/cardview"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="140dp"
                android:text="Shikha Sharma"/>
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:id="@+id/chipgroup"
            app:singleSelection="true"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            app:layout_constraintStart_toStartOf="parent">

        </com.google.android.material.chip.ChipGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/related_blog"
            android:text="Related Blogs"
            app:layout_constraintTop_toBottomOf="@id/chipgroup"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"
            app:layout_constraintTop_toBottomOf="@id/related_blog" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>